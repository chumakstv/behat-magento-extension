{
    "name":         "irs/behat-magento-extension",
    "description":  "Behat's extension that restore Magento at required state.",
    "keywords":     ["Magento", "Behat", "Fixture"],
    "type":         "library",
    "license":      "MIT",
    "minimum-stability": "dev",

    "authors": [
        {
            "name":   "Vadim Kusakin",
            "email":  "vadim.irbis@gmail.com"
        }
    ],
    
    "require": {
        "php":                     ">=5.4.7",
        "behat/behat":             "2.4.*",
        "symfony/console":         ">=2.0,<2.3-dev",
        "symfony/yaml":            ">=2.2,<2.3-dev",
        "irs/magento-initializer": "dev-master"
    },
    
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },

    "bin": ["bin/magento"],
    
    "autoload": {
        "psr-0": {"Irs\\BehatMagentoExtension": "src/"}
    }
}